generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  TODO
  IN_PROGRESS
  DONE
}

model Todo {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String?
  startDate   DateTime?
  endDate     DateTime?
  status      TodoStatus @default(TODO)
  parentId    Int?
  parent      Todo?      @relation("SubTodos", fields: [parentId], references: [id])
  subtodos    Todo[]     @relation("SubTodos")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
